<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fg_user_permission_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
<!--android:layout_marginLeft="@dimen/dp_15"-->
    <LinearLayout
        android:id="@+id/line_tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gun_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_permission_gun_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请提枪加油"
                android:layout_gravity="center"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/tip_textview_size"
                android:visibility="invisible"
                android:textColor="@color/color_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_permission_user_id"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_uid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID号："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>

            <TextView
                android:id="@+id/fg_user_permission_user_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="------"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_permission_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_permission_value_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:layout_gravity="center"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_permission_money_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_oil_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油量："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_permission_oil_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_permission_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_permission_car_number"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_car_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>

            <TextView
                android:id="@+id/fg_user_car_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方式："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_pay_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_add_oil_discount_model"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_discount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠模式："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/fg_user_discount_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_real_receive_money"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_real_receive_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实收："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_real_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_discount_money"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_discount_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_discount_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_balance"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_balance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
            <TextView
                android:id="@+id/fg_user_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingEnd="42dp"
                android:paddingRight="42dp"
                android:text="----.--"
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tip_textview_size"
                android:textColor="@color/color_black"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
     >
        <Button
            android:id="@+id/btn_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:textSize="@dimen/tip_textview_size"
            android:visibility="gone"/>
<!--        android:visibility="gone"-->
        <Button
            android:id="@+id/fg_user_permission_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:textSize="@dimen/tip_textview_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/fg_user_permission_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="积分"
            android:textSize="@dimen/tip_textview_size"
            android:visibility="gone" />
    </LinearLayout>
    <TextView
        android:id="@+id/fg_user_permission_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tip_textview_size" />
</LinearLayout>